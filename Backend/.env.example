# Azure OpenAI Credentials
AZURE_CHAT_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_CHAT_KEY=your_key_here
AZURE_CHAT_DEPLOYMENT=gpt-4-deployment-name
AZURE_CHAT_API_VERSION=2025-03-01-preview

AZURE_EMBEDDING_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_EMBEDDING_KEY=your_key_here
AZURE_EMBEDDING_DEPLOYMENT=text-embedding-ada-002
AZURE_EMBEDDING_API_VERSION=2023-05-15

# Server
HOST=127.0.0.1
PORT=8000

# Database
CHROMA_DB_PATH=Data\KnowledgeBase

# Security (REQUIRED - Generate your own!)
# Run: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=REPLACE_WITH_GENERATED_SECRET
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_AUTH=5/minute
RATE_LIMIT_CHAT=20/minute
RATE_LIMIT_UPLOAD=10/minute

# File Upload Limits (in bytes)
MAX_FILE_SIZE_GENERAL=52428800
MAX_FILE_SIZE_CHAT=26214400
ALLOWED_FILE_EXTENSIONS=.pdf,.docx,.doc,.xlsx,.xls,.txt,.png,.jpg,.jpeg

# Cookie Settings
COOKIE_SECURE=false
COOKIE_SAMESITE=lax

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/qiyasai.log

# CORS (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173
